{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["esnext"], // Replace with valid options
    "moduleResolution": "node", // Fix here
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "incremental": true, // Add this if using tsBuildInfoFile
    "tsBuildInfoFile": "./.tsbuildinfo", // Ensure 'incremental' or 'composite' is enabled
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src"]
}
